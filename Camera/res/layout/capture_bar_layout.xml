                <ImageView android:id="@id/capture_button_video" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="center" />
                <ImageView android:id="@id/capture_bar_slow_motion_icon" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="center" />
                <RelativeLayout android:id="@id/capture_bar_slow_motion_indicator_container" android:visibility="invisible" android:layout_width="@dimen/capture_bar_indicator_container_size" android:layout_height="@dimen/capture_bar_indicator_container_size" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
                    <ImageView android:id="@id/capture_bar_slow_motion_indicator" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/camera_indicator_icon_slow_motion" android:scaleType="center" />
