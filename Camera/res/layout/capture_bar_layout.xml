<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/capture_bar_container" android:background="#00000000" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
