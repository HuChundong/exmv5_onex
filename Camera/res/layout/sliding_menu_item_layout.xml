<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <Button android:id="@id/item_button" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="@dimen/sliding_menu_item_margin" />
    <com.android.camera.rotate.RotateRelativeLayout android:id="@id/item_content_container" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="@dimen/sliding_menu_item_margin">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:id="@id/item_image" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:id="@id/item_text" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
    </com.android.camera.rotate.RotateRelativeLayout>
</RelativeLayout>
